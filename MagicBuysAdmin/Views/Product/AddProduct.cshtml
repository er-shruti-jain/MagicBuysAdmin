@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using MagicBuysAdmin.Models;
@model ProductAddModel;

<link href="/bootstrap/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <h1>Add New Product</h1>
<form class="row" method="post" enctype="multipart/form-data"  >
    <div class="col-md-6">
            <label asp-for="Name" class="form-label">Product Name</label>
            <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="col-md-12">
            <label asp-for="Description" class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description">
    </div>
    <div class="col-md-6">
            <label asp-for="Price" class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Price">
    </div>
    <div class="col-md-6">
            <label asp-for="Quantity" class="form-label">Quantity</label>
            <input type="number" class="form-control" asp-for="Quantity">
    </div>
        <div class="col-md-6">
            <label asp-for="MainImage" class="form-label">Product Image</label>
            <input type="file" class="form-control" asp-for="MainImage">
        </div>
 
    <div class="col-12 mt-5">
            <button type="submit" class="btn btn-outline-danger" asp-controller="Product"
                    asp-action="ProductList">
                Cancel
            </button>
            <button type="submit" class="btn btn-primary" asp-controller="Product" asp-action="AddProduct">Add Product</button>
    </div>
</form>
</div>